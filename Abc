                                </div>
                                <div className={styles.cardField}>
                                    <span className={styles.fieldLabel}>PLANT</span>
                                    <span className={styles.fieldValue}>{approval.plant}</span>
                                </div>
                            </div>

                            <div className={styles.cardRow}>
                                <div className={styles.cardFieldFull}>
                                    <span className={styles.fieldLabel}>OF VALUE</span>
                                    <span className={styles.fieldValueAmount}>
                                        {approval.value}{' '}
                                        <span className={styles.currency}>{approval.currency}</span>
                                    </span>
                                </div>

                                <button
                                    className={styles.viewButton}
                                    onClick={() => handleViewDetails(approval)}
                                    aria-label={`View ${approval.id}`}
                                >
                                    <FiChevronRight size={20} />
                                </button>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    );
}


