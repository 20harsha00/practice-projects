'use client';

import React, { useEffect, useState } from 'react';
import { useRouter } from 'next/navigation';
import { FiChevronLeft, FiEye, FiX, FiCheck } from 'react-icons/fi';
import {
    BsFileEarmarkPdf,
    BsFileEarmarkWord,
    BsFileEarmarkExcel,
    BsFileEarmarkImage,
} from 'react-icons/bs';
import styles from './JCSDetails.module.css';
import { approvals, attachments, moreDetails, lineItems } from './data';

type JcsData = typeof approvals[0];

interface JCSDetailsClientProps {
    jcsData: JcsData | undefined;
    id: string;
    initialOpenState: boolean;
}

export default function JCSDetailsClient({ jcsData, id, initialOpenState }: JCSDetailsClientProps) {
    const router = useRouter();
    const [expandedLineItem, setExpandedLineItem] = useState<number | null>(null);

    const [showApproveModal, setShowApproveModal] = useState(initialOpenState);
    const [comment, setComment] = useState('');
    const [showSuccessSheet, setShowSuccessSheet] = useState(false);

    useEffect(() => {
        if (!showApproveModal && initialOpenState) {
            router.replace(`/jcs-details/${id}`, { scroll: false });
        }
    }, [showApproveModal, initialOpenState, id, router]);

    if (!jcsData) {
        return (
            <div className={styles.container}>
                <div className={styles.header}>
                    <div className={styles.headerTop}>
                        <FiChevronLeft size={28} className={styles.backIcon} onClick={() => router.back()} />
                        <h1 className={styles.headerTitle}>JCS Details</h1>
                    </div>
                </div>
                <div className={styles.errorMessage}>JCS with ID {id} not found.</div>
            </div>
        );
    }

    const getFileIcon = (type: string) => {
        switch (type) {
            case 'pdf': return <BsFileEarmarkPdf size={16} />;
            case 'docx':
            case 'doc': return <BsFileEarmarkWord size={16} />;
            case 'xlsx': return <BsFileEarmarkExcel size={16} />;
            case 'png': return <BsFileEarmarkImage size={16} />;
            default: return <FiEye size={16} />;
        }
    };

    const closeModal = () => {
        setShowApproveModal(false);
    };

    const handleReject = () => console.log('Reject clicked');

    const submitApprove = async () => {
        console.log('Approved with comment:', comment);

        setShowApproveModal(false);
        setShowSuccessSheet(true);
    };

    const closeSuccess = () => {
        setShowSuccessSheet(false);
    };

    const handleViewDetails = (from: 'pfa' | 'pre' | 'reviewer', value?: string) => {
        const q = new URLSearchParams({
            from,
            value: value ?? '',
            jcsId: id, 
            pfa: moreDetails.postFinanceApproval ?? '',
        });
        router.push(`/add-reviewers?${q.toString()}`);
    };

    return (
        <div className={styles.container}>
            <div className={styles.header}>
                <div className={styles.headerTop}>
                    <FiChevronLeft size={28} className={styles.backIcon} onClick={() => router.back()} />
                    <h1 className={styles.headerTitle}>JCS Details</h1>
                </div>
                <div className={styles.topInfo}>
                    <div className={styles.infoRow}>
                        <div className={styles.infoField}>
                            <span className={styles.infoLabel}>JCS No</span>
                            <span className={styles.infoValue}>{jcsData.jcsNo}</span>
                        </div>
                        <div className={styles.infoField}>
                            <span className={styles.infoLabel}>Raised By</span>
                            <span className={styles.infoValue}>{jcsData.raisedBy}</span>
                        </div>
                    </div>
                    <div className={styles.infoRow}>
                        <div className={styles.infoField}>
                            <span className={styles.infoLabel}>Plant</span>
                            <span className={styles.infoValue}>{jcsData.plant}</span>
                        </div>
                        <div className={styles.infoField}>
                            <span className={styles.infoLabel}>Of Value</span>
                            <span className={styles.infoValue}>
                                {jcsData.value} <span className={styles.currency}>{jcsData.currency}</span>
                            </span>
                        </div>
                    </div>
                    <div className={styles.infoRow}>
                        <div className={styles.infoField}>
                            <span className={styles.infoLabel}>Create Date</span>
                            <span className={styles.infoValue}>{jcsData.createDate}</span>
                        </div>
                    </div>
                </div>
            </div>

            <div className={styles.mainContent}>
                <div className={styles.statusBadge}>
                    <span className={styles.statusIcon}>â±</span>
                    <span className={styles.statusText}>{jcsData.status}</span>
                </div>

                <section className={styles.section}>
                    <div className={styles.sectionHeader}>
                        <h2 className={styles.sectionTitle}>ATTACHMENTS</h2>
                        <span className={styles.badge}>{attachments.length}</span>
                    </div>
                    <div className={styles.attachmentGrid}>
                        {attachments.map((a) => (
                            <button key={a.id} className={styles.attachmentItem}>
                                {getFileIcon(a.type)} <span className={styles.attachmentName}>{a.name}</span>
                            </button>
                        ))}
                    </div>
                </section>

                <section className={styles.section}>
                    <h2 className={styles.sectionTitle}>MORE DETAILS</h2>
                    <div className={styles.detailsGrid}>
                        <div className={styles.detailField}>
                            <span className={styles.detailLabel}>Purchase Order</span>
                            <span className={styles.detailValue}>{moreDetails.purchaseOrder}</span>
                        </div>
                        <div className={styles.detailField}>
                            <span className={styles.detailLabel}>Post Finance Approval</span>
                            <span className={styles.detailValue}>{moreDetails.postFinanceApproval}</span>
                        </div>

                    </div>
                </section>

                <section className={styles.section}>
                    <div className={styles.sectionHeader}>
                        <h2 className={styles.sectionTitle}>LINE ITEMS</h2>
                        <span className={styles.badge}>{lineItems.length}</span>
                    </div>

                    {lineItems.map((item, idx) => {
                        const isOpen = expandedLineItem === idx;
                        return (
                            <React.Fragment key={item.id}>
                                <div
                                    className={styles.lineItem}
                                    onClick={() => setExpandedLineItem(isOpen ? null : idx)}
                                >
                                    <div className={styles.lineItemHeader}>
                                        <span className={styles.lineItemTitle}>{item.title}</span>
                                        <FiChevronLeft
                                            className={`${styles.lineItemArrow} ${isOpen ? styles.rotated : ''}`}
                                        />
                                    </div>

                                    <div className={styles.lineItemMeta}>
                                        <div className={styles.metaCol}>
                                            <div className={styles.metaLabel}>Price:</div>
                                            <div className={styles.metaValue}>
                                                1.000 <span className={styles.metaUnit}>EA</span>
                                            </div>
                                        </div>
                                        <div className={styles.metaCol}>
                                            <div className={styles.metaLabel}>Net Value:</div>
                                            <div className={styles.metaValue}>
                                                11,00,000.00 <span className={styles.metaUnit}>EA</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                {isOpen && (
                                    <div className={styles.reviewerSection}>
                                        <h3 className={styles.reviewerTitle}>REVIEWER DETAILS</h3>
                                        <div className={styles.reviewerCard}>
                                            <div className={styles.reviewerGrid}>
                                                <div className={styles.reviewerField}>
                                                    <div className={styles.reviewerLabel}>Purchase Order</div>
                                                    <div className={styles.reviewerValueContainer}>
                                                        <div className={styles.reviewerValue}>{moreDetails.purchaseOrder}</div>
                                                    </div>
                                                </div>
                                                <div className={styles.reviewerField}>
                                                    <div className={styles.reviewerLabel}>Post Finance Approval</div>
                                                    <div className={styles.reviewerValueContainer}>
                                                        <div className={styles.reviewerValue}>{moreDetails.postFinanceApproval}</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                )}
                            </React.Fragment>
                        );
                    })}
                </section>
            </div>

            <div className={styles.bottomActions}>
                <button className={styles.actionBtn} onClick={handleReject}>
                    <div className={`${styles.circleIcon} ${styles.rejectIcon}`}>
                        <FiX size={22} />
                    </div>
                    <span className={styles.actionLabelReject}>REJECT</span>
                </button>

                <button
                    className={styles.actionBtn}
                    onClick={() => handleViewDetails('pfa', moreDetails.postFinanceApproval)}
                >
                    <div className={`${styles.circleIcon} ${styles.approveIcon}`}>
                        <FiCheck size={22} />
                    </div>
                    <span className={styles.actionLabelApprove}>APPROVE</span>
                </button>
            </div>

            {showApproveModal && (
                <div className={styles.modalOverlay} role="dialog" aria-modal="true">
                    <div className={styles.modal}>
                        <button className={styles.closeBtn} onClick={closeModal} 
